{
	"name": "@5argon/arkham-starter",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build-ui": "yarn workspace @5argon/arkham-ui build",
		"story": "deno run --allow-read --allow-write https://deno.land/x/sveltekit_stories_watcher@0.0.2/mod.ts ./src/lib/design ./src/routes/storybook",
		"build": "vite build",
		"deploy": "vite build && yarn wrangler deploy",
		"package": "vite package",
		"preview": "vite preview",
		"prepare": "vite sync",
		"test": "vitest",
		"deck-process": "deno run --allow-read --allow-write --allow-net ./deno/deck-process.ts ./src/lib/data/decks.csv",
		"download-cards": "tsx scripts/download-cards.ts",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"proto": "npx protoc --ts_out ./src/lib/proto/generated --proto_path ./src/lib/proto/definitions  ./src/lib/proto/definitions/*",
		"paraglide-compile": "npx @inlang/paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"screenshot:setup": "tsx scripts/screenshot-setup-cards.ts",
		"rclone-sync": "rclone sync -P ./static/image/card r2ahlcg:arkham-card-images"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.2",
		"@sveltejs/adapter-auto": "^7.0.1",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"@types/eslint": "^9.6.1",
		"@types/pako": "^2.0.4",
		"@typescript-eslint/eslint-plugin": "^8.55.0",
		"@typescript-eslint/parser": "^8.55.0",
		"autoprefixer": "^10.4.24",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.14.0",
		"jsdom": "^28.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"svelte-marked": "^0.8.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"wrangler": "^4.63.0"
	},
	"type": "module",
	"dependencies": {
		"@5argon/arkham-kohaku": "workspace:*",
		"@5argon/arkham-life-ui": "workspace:*",
		"@5argon/arkham-string": "workspace:*",
		"@fontsource/fira-mono": "^5.2.7",
		"@inlang/paraglide-js": "^2.10.0",
		"@lukeed/uuid": "^2.0.1",
		"@protobuf-ts/plugin": "^2.11.1",
		"@protobuf-ts/runtime": "^2.11.1",
		"clsx": "^2.1.1",
		"cookie": "^1.1.1",
		"fuse.js": "^7.1.0",
		"pako": "^2.1.0"
	}
}
